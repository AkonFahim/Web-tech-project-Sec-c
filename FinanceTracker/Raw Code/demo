// Format currency with BDT symbol
function formatCurrency($amount) {
    return 'BDT ' . number_format($amount);
}

// Get sorting parameter from URL
$sort = isset($_GET['sort']) ? $_GET['sort'] : 'date';
$order = isset($_GET['order']) ? $_GET['order'] : 'desc';

// Sort transactions based on user selection
if ($sort === 'date') {
    usort($transactions, function($a, $b) use ($order) {
        if ($order === 'asc') {
            return strtotime($a['date']) - strtotime($b['date']);
        } else {
            return strtotime($b['date']) - strtotime($a['date']);
        }
    });
} elseif ($sort === 'amount') {
    usort($transactions, function($a, $b) use ($order) {
        if ($order === 'asc') {
            return $a['amount'] - $b['amount'];
        } else {
            return $b['amount'] - $a['amount'];
        }
    });
} elseif ($sort === 'type') {
    usort($transactions, function($a, $b) use ($order) {
        if ($order === 'asc') {
            return strcmp($a['type'], $b['type']);
        } else {
            return strcmp($b['type'], $a['type']);
        }
    });
}
