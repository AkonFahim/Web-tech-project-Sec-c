    ['name' => 'Pets', 'amount' => 8450, 'percentage' => 22, 'color' => '#3a0ca3']
];

$assets = [
    ['name' => 'Land', 'value' => 16580000, 'color' => '#4361ee'],
    ['name' => 'House', 'value' => 20000000, 'color' => '#4cc9f0'],
    ['name' => 'Stock', 'value' => 1500000, 'color' => '#f72585'],
